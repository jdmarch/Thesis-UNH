\def\@makechapterhead#1{               % Heading for \chapter command
        \vspace*{10pt}                        % (UNH): [50] Space at top of text page. GN- 1.5" top margin for chapters 
  { \parindent 0pt \raggedright 
    \ifnum \c@secnumdepth >\m@ne       % IF secnumdepth > -1 THEN
      \begin{center}       % UNH - Center the chapter headings.
      \huge\bf\sc \@chapapp{} \thechapter % Print 'Chapter' and number.
    \par 
      \vskip 10pt \fi                  % (UNH):[20] Space between Chap & title.
      \Huge \bf                        % Title.
    #1\par 
      \end{center}       % UNH - end the centering...
    \nobreak                           % TeX penalty to prevent page break.
    \vskip 20pt                        % (UNH):[40] Space between title & text.
  } }


\def\@makeschapterhead#1{              % Heading for \chapter* command
\vspace*{-20pt}                        % (UNH):[50] Space at top of page.
  { \parindent 0pt \raggedright 
    \begin{center}                     % UNH - Center the chapter headings. 
    \Huge \bf                          % Title.
    #1\par 
    \end{center}                       % UNH - end the centering...
    \nobreak                           % TeX penalty to prevent page break.
    \vskip 20pt                        % (UNH):[40] Space between title & text.
  } }


\def\chapter{\clearpage      % Starts new page.
   \thispagestyle{plain}     % Page style of chapter page is 'plain'
   \global\@topnum\z@        % Prevents figures from going at top of page.
   \@afterindentfalse        % Suppresses indent in first paragraph.  Change
   \secdef\@chapter\@schapter}   % to \@afterindenttrue to have indent.
   
   %\@afterindenttrue does not work when \section{} is presented. Use \indent above the text instead, but it is NOT required (GNN)

\def\@chapter[#1]#2{\ifnum \c@secnumdepth >\m@ne
        \refstepcounter{chapter}
        \typeout{\@chapapp\space\thechapter.}
        \addcontentsline{toc}{chapter}{\protect
        \numberline{\thechapter}#1}\else
      \addcontentsline{toc}{chapter}{#1}\fi
   \chaptermark{#1}
   \addtocontents{lof}{\protect\addvspace{10pt}} % Adds between-chapter space
   \addtocontents{lot}{\protect\addvspace{10pt}} % to lists of figs & tables.
   \if@twocolumn                                 % Tests for two-column mode.  
           \@topnewpage[\@makechapterhead{#2}]  
     \else \@makechapterhead{#2}
           \@afterheading                  % Routine called after chapter and
     \fi}                                  % section heading.

\def\@schapter#1{\if@twocolumn \@topnewpage[\@makeschapterhead{#1}]
        \else \@makeschapterhead{#1} 
              \@afterheading\fi}



